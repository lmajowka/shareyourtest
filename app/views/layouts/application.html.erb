<div class="cb"></div>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  </div>

<div class='pl40'>
  <%= yield %>
</div>

<div class='empty-space cb'></div>

<div id="footer">
  <div class="fl mt20 ml20">Shareyourtest.com - 2014</div>
  <div class="fr mt20 mr20">Github: <a href="https://github.com/lmajowka/shareyourtest">https://github.com/lmajowka/shareyourtest</a></div>
</div>

</body>
</html>

